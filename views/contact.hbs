    <!-- contact section start -->
    <h1 class="contact-text">Contact</h1>
    <h2 class="text-center">Feel free to contact me for more information, kindly fill the form below!</h2>

    <section class="contactPage">


        <form class="formContent">

            <div class="form-group row">
                <label for="inputName" class="col-sm-3 col-form-label">Your Name*</label>
                <div class="col-sm-9">
                    <input type="name" class="form-control" id="inputName" placeholder="Jennifer Johnson">
                </div>
            </div>

            <div class="form-group row">
                <label for="inputEmail" class="col-sm-3 col-form-label">Email*</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="inputEmail" placeholder="example@example.com">
                </div>
            </div>

            <div class="form-group row">
                <label for="inputMessage" class="col-sm-3 col-form-label">Message*</label>
                <div class="col-sm-9">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="6"
                        placeholder="Please write your message here!">
                    </textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3"><small>Field with asterisk (*) are must filled.</small></label>
                <button type="submit" class="btn btn-outline-dark col-sm-3">Submit</button>
            </div>

        </form>


